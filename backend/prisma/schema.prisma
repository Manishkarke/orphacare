// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema


generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Roles {
  admin
  user
}

model User {
  id            Int             @id @default(autoincrement())
  name          String
  address       String
  emailAddress  String          @unique
  phoneNumber   String          @unique
  password      String
  createdAt     DateTime        @default(now())
  missingReport MissingReport[]
  donaton       Donation[]
  role          Roles           
}

model MissingReport {
  id                   Int      @id @default(autoincrement())
  childLastSeenAddress String
  childLastSeenTime    DateTime
  childAge             Int
  remarks              String?
  reporterId           Int
  reporter             User     @relation(fields: [reporterId], references: [id])
}



enum DonationType  {
  Food
  Cloth
  Books
}


model Donation {
  id            Int             @id @default(autoincrement())       
  weight        Int
  donationType  DonationType
  donatorId     Int
  donator       User            @relation(fields: [donatorId], references: [id])
}

model Volunteer{
  id            Int             @id @default(autoincrement()) 
  name          String
  age           Int
  picture       String? 
}



enum Caste {
Brahmin
Kshatriya
Vaishya
Sudra

}

enum Provience {
 Koshi
 Madhesh 
 Bagmati
 Gandaki
 Lumbini
 Karnali
 SudurPachim
}
enum Gender {
  Male
  Female
  Other
}
model KidsForAdoption{
  id            Int             @id @default(autoincrement()) 
  picture       String?
  name          String
  surname       String
  age           Int
  caste         Caste
  gender        Gender
  provience     Provience
  description   String
 isAdopted      Boolean         @default(false)
}